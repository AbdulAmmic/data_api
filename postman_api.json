            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "http://127.0.0.1:5000/vtpass/variations/data-mtn",
              "protocol": "http",
              "host": ["127.0.0.1"],
              "port": "5000",
              "path": ["vtpass", "variations", "data-mtn"]
