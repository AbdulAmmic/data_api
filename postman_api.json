  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"08012345678\"\n}"
            },
            "url": { "raw": "http://127.0.0.1:5000/auth/register", "protocol": "http", "host": ["127.0.0.1"], "port": "5000", "path": ["auth", "register"] }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": { "raw": "http://127.0.0.1:5000/auth/login", "protocol": "http", "host": ["127.0.0.1"], "port": "5000", "path": ["auth", "login"] }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Profile (/me)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://127.0.0.1:5000/me", "protocol": "http", "host": ["127.0.0.1"], "port": "5000", "path": ["me"] }
          }
        },
        {
          "name": "Get Wallet Info",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://127.0.0.1:5000/wallet", "protocol": "http", "host": ["127.0.0.1"], "port": "5000", "path": ["wallet"] }
          }
        },
        {
          "name": "Fund Wallet (Monnify Stub)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://127.0.0.1:5000/wallet/fund", "protocol": "http", "host": ["127.0.0.1"], "port": "5000", "path": ["wallet", "fund"] }
          }
        }
      ]
    },
    {
      "name": "VTpass",
      "item": [
        {
          "name": "Get All Services",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
